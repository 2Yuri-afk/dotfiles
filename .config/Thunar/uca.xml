<action>
	<icon>preferences-desktop-wallpaper</icon>
	<name>Set as wallpaper (Hyprpaper)</name>
	<submenu></submenu>
	<unique-id>1755960715978513-1</unique-id>
	<command>sed -i &quot;s|^preload = .*|preload = $(echo %f | sed &quot;s|$HOME|~|&quot;)|&quot; ~/.config/hypr/hyprpaper.conf
sed -i &quot;s|^wallpaper = .*|wallpaper = ,$(echo %f | sed &quot;s|$HOME|~|&quot;)|&quot; ~/.config/hypr/hyprpaper.conf
hyprctl hyprpaper preload %f &amp;&amp; hyprctl hyprpaper wallpaper ,%f</command>
	<description>Set the selected image as wallpaper using hyprpaper.</description>
	<range>*</range>
	<patterns>*</patterns>
	<image-files/>
</action>
